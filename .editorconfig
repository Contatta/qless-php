# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true

[*.php]
indent_size              = 4
indent_style             = space
trim_trailing_whitespace = true

[Makefile]
indent_style             = tab
trim_trailing_whitespace = true

[*.{yml,lua}]
indent_size              = 2
indent_style             = space
trim_trailing_whitespace = true

[{composer.json,phpunit.xml,phpunit.xml.dist,phpcs.xml,phpcs.xml.dist}]
indent_size              = 4
indent_style             = space
trim_trailing_whitespace = true

[*.md]
indent_style             = space
trim_trailing_whitespace = false
